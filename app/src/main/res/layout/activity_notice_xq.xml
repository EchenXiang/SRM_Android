<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_main_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="#101010"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/back"
                android:id="@+id/notice_xq_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="通知详情"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#ffffff"/>
        </android.support.v7.widget.Toolbar>
    </LinearLayout>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/notice_xq_title"
        android:text="订单通知"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/notice_xq_textView2"
        android:text="发布单位"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/notice_xq_title"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/notice_xq_sender_ent"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_toEndOf="@+id/notice_xq_textView2"
        android:layout_toRightOf="@+id/notice_xq_textView2"
        android:layout_alignBottom="@+id/notice_xq_textView2"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/notice_xq_textView4"
        android:text="发布时间"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_toStartOf="@+id/notice_xq__date"
        android:layout_toLeftOf="@+id/notice_xq__date"
        android:layout_alignTop="@+id/notice_xq_textView2"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/notice_xq__date"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/notice_xq_textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="16dp"
        android:id="@+id/notice_xq_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"/>

</RelativeLayout>