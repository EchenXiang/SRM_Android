<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:imagecontrol="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.ct.srm_android.MainMenuActivity"
    android:orientation="vertical"
    >

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="160dp"
       android:orientation="vertical"
       android:background="#171718">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       <Tools.RoundImageView
           android:id="@+id/roundImage_two_border"
           android:layout_width="150dp"
           android:layout_height="50dp"
           android:scaleType="centerCrop"
           android:layout_centerHorizontal="true"
           imagecontrol:border_inside_color="#fff7f2e9"
           imagecontrol:border_outside_color="#ffd5d1c8"
           imagecontrol:border_thickness="2dp"
           android:src="@drawable/user_image"
           />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="系统管理员"
               android:textSize="12dp"
               android:layout_gravity="center"
               android:textColor="#FFFFFF"
               android:layout_below="@+id/roundImage_two_border"
               android:layout_centerHorizontal="true"
               android:layout_margin="10dp"
               android:id="@+id/left_menu_userName"
               />

       </RelativeLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/welcome_text"
               android:textSize="12dp"
               android:text="欢迎进入供应商管理系统"
               android:textColor="#FEFEFE"
               android:layout_gravity="center"
               />


   </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personal_listView"

        >

    </ListView>
</LinearLayout>
