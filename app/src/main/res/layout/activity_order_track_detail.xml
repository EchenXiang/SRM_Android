<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ct.srm_android.OrderSelectDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar

            android:id="@+id/activity_main_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="#101010"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/back"
                android:id="@+id/order_listview_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="订单追踪详情"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="20dp" />



        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="00dp"
            android:background="@drawable/bk">

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="企业名称："
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/tracks_item_company_name"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/bk">

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="订单号："
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/tracks_item_order_id"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/bk">

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="物料号："
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"

                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/tracks_item_material_number"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bk">

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="物料描述："
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/tracks_item_material_name"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/bk">

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="订单生成日期："
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/tracks_item_order_generate_day"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/bk">

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="规定到货日期："
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/tracks_item_specified_delivery"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/bk">

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="订购数量："
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/tracks_item_number"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/bk">

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="已发数量："
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/tracks_item_had_ship_number"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/bk">

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="收货数量："
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/tracks_item_number2"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/bk">

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="退货数量："
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/tracks_item_number3"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow11"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/bk">

            <TextView
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:text="发货状态："
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="#000"
                android:textSize="15dp"
                android:id="@+id/tracks_item_delivery_complete"/>
        </TableRow>


    </TableLayout>



</LinearLayout>

