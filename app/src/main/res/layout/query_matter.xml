<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_span="1"
                android:text="订单号："
                android:textStyle="bold"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/orderNum_matter"
                android:background="@drawable/edit_text_shape"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_span="3"
                android:hint="单行输入"
                android:textColorHint="@color/gray"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_span="1"
                android:text="物料号："
                android:textStyle="bold"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/matterNum_matter"
                android:background="@drawable/edit_text_shape"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_span="3"
                android:layout_marginRight="20dp"
                android:hint="单行输入"
                android:textColorHint="@color/gray"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_span="1"
                android:text="主机厂名称："
                android:textStyle="bold"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/factoryName_matter"
                android:background="@drawable/edit_text_shape"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_span="3"
                android:layout_marginRight="20dp"
                android:hint="单行输入"
                android:textColorHint="@color/gray"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_span="1"
                android:text="采购组代号："
                android:textStyle="bold"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/groupNum_matter"
                android:background="@drawable/edit_text_shape"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_span="3"
                android:layout_marginRight="20dp"
                android:hint="单行输入"
                android:textColorHint="@color/gray"/>
        </TableRow>
        <TableRow
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_span="1"
                android:text="发布时间："
                android:textStyle="bold"
                android:textSize="18sp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_span="3"
                android:layout_marginTop="2dp"
                android:layout_marginRight="20dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/beginTime_matter"
                    android:background="@drawable/edit_text_shape"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="center"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/beginCalendar_matter"
                    android:background="@drawable/rili"
                    android:layout_alignParentRight="true"
                    android:layout_width="45dp"
                    android:layout_height="37dp"
                    android:onClick="MyOnClick"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_span="1"
                android:text=""
                android:textStyle="bold"
                android:textSize="18sp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_span="3"
                android:layout_marginRight="20dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/finishTime_matter"
                    android:background="@drawable/edit_text_shape"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="16sp" />
                <Button
                    android:id="@+id/finishCalendar_matter"
                    android:background="@drawable/rili"
                    android:layout_alignParentRight="true"
                    android:layout_width="45dp"
                    android:layout_height="37dp"
                    android:onClick="MyOnClick"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/query_matter_button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="查询"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="#ffffff"
        android:background="@drawable/shape2"
        android:layout_gravity="center"
        android:textSize="18dip"
        android:onClick="QueryClick"/>
</LinearLayout>