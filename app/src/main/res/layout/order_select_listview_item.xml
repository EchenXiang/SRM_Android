<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000000000"
                android:textSize="20dp"
                android:textColor="#080808"
                android:id="@+id/order_select_item_order_id"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:textSize="10dp"
                android:textColor="#d1bbbb"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未确认"
                android:textColor="#ffffff"
                android:background="#080808"
                android:textSize="10dp"
                android:id="@+id/order_select_item_provider_confirm"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未发货"
                android:textColor="#ffffff"
                android:background="#080808"
                android:textSize="10dp"
                android:id="@+id/order_select_item_order_status"
                android:layout_toRightOf="@+id/order_select_item_provider_confirm"
                android:layout_marginLeft="15dp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="未收货"
               android:textColor="#ffffff"
               android:background="#080808"
               android:textSize="10dp"
               android:id="@+id/order_select_item_delivery_status"
               android:layout_toRightOf="@+id/order_select_item_order_status"
               android:layout_marginLeft="15dp"/>

       </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生成日期"
            android:textSize="10dp"
            android:textColor="#d1bbbb"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="20150819"
            android:textSize="10dp"
            android:textColor="#282424"
            android:layout_marginTop="20dp"
            android:id="@+id/order_select_item_order_generate_day"/>

    </LinearLayout>

</LinearLayout>

