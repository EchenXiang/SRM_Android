<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:launchMode="singleInstance"
  >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/black">
        <Button
            android:id="@+id/return_performance"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/back" />
        <TextView
            android:id="@+id/title_performance"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/black"
            android:text="丹阳市中远车灯有限公司"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.view.ViewPager
            android:id="@+id/graph_viewpager"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_alignParentTop="true"
            android:background="@color/black">
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/graph_viewpager"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/node_First"
                android:src="@drawable/node_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"/>
            <ImageView
                android:id="@+id/node_Second"
                android:src="@drawable/node_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <ImageView
                android:id="@+id/node_Third"
                android:src="@drawable/node_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <LinearLayout
                android:id="@+id/titleGroup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/black">
                <TextView
                    android:id="@+id/title_matter"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="物料得分"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edit_text_shape"/>
                <TextView
                    android:id="@+id/title_system"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="供应商系统分数"
                    android:textSize="16dp"
                    android:textColor="@color/gray"
                    android:background="@drawable/edit_text_shape"/>
                <TextView
                    android:id="@+id/title_hand"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="供应商手动打分"
                    android:textSize="16dp"
                    android:textColor="@color/gray"
                    android:background="@drawable/edit_text_shape"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/choose_note"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:background="#449fcc"></ImageView>
        </RelativeLayout>
    </HorizontalScrollView>
    <android.support.v4.view.ViewPager
        android:id="@+id/info_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>

</LinearLayout>