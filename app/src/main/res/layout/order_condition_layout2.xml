<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"

            android:text="企业名称："
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/order_track_company_name"
            android:background="@drawable/edit_text_shape"
            android:hint="输入企业" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"

            android:text="订单号:"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/order_track_order_id"
            android:background="@drawable/edit_text_shape"
            android:hint="输入订单号" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"

            android:text="物料号:"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/order_track_material_number"
            android:background="@drawable/edit_text_shape"
            android:hint="输入物料号" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"

            android:text="收货状态:"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000"/>

        <Spinner
            android:layout_width="match_parent"
            android:id="@+id/order_track_delivery_status_spinner"
            android:entries="@array/delivery_status"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_shape"
            />
        <!--<EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:id="@+id/text4"
            android:background="@drawable/one"
            android:hint="输入订单号" />-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"

            android:text="规定到货日期："
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="#000"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:id="@+id/order_track_specified_delivery_from"
                android:background="@drawable/edit_text_shape"
                android:hint="起始日期" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/rili"
                android:id="@+id/order_track_date_from"
                android:layout_alignRight="@+id/order_track_specified_delivery_from"
                android:layout_alignBottom="@+id/order_track_specified_delivery_from"
                android:onClick="onclick"
                android:layout_alignParentTop="true" />
        </RelativeLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="145dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:id="@+id/order_track_specified_delivery_to"
                android:background="@drawable/edit_text_shape"
                android:hint="终止日期"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/rili"
                android:id="@+id/order_track_date_to"
                android:layout_alignRight="@+id/order_track_specified_delivery_to"
                android:layout_alignBottom="@+id/order_track_specified_delivery_to"
                android:onClick="onclick"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:text="查询"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:id="@+id/order_track_select"
        android:background="@drawable/shape2"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:onClick="SelectOnClick"
        />

</LinearLayout>
